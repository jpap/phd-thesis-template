%%
%% Title page and copyright
%%

\renewcommand\maketitle{%
   \newpage
	{
		% Title page has no headings
		\thispagestyle{empty}
		% Call this page 1
		\setcounter{page}{1}
		% Use single spacing
		\singlespacing
			\let\footnotesize\small
			\let\footnoterule\relax
		   \null\vfil
			\begin{center}
				\large
				{\Huge\bfseries\smallcapstitle {\@title} \par}
					\vspace{1cm}
				{\Large
					{\@author} \par
						\vspace{3cm}
					Submitted in total fulfilment of the requirements of the degree of \par
					\bigskip
					{\LARGE Doctor of Philosophy} \par
				}
					\vspace{2cm}
				%\includegraphics[height=3cm]{\@univlogofile} \par
					\bigskip
				{\@department} \par
				{\@university} \par
					\vspace{2cm}
				{\@submissionmonth} {\@submissionyear} \par
					\vspace{1cm}
				\ifx\archivalpapernote\undefined
					{\footnotesize
						Produced on archival quality paper.
					}
			   \else
					{\footnotesize
						% Don't print it, but reserve the space...
						\phantom{Produced on archival quality paper.}
					}
				\fi
			\end{center}
			\vfil\null
	}

	%%
	%% Copyright notice
	%%
   \newpage
	{
		% Title page has no headings
		\thispagestyle{empty}
		% Use single spacing
		\singlespacing
			\vfill\null
		   \vspace{0.75\textheight}
			\begin{center}
				\Large
					Copyright \copyright\ {\@submissionyear}\ {\@author} \par
			\end{center}
			\bigskip
				All rights reserved.  No part of the publication may be reproduced in any form by print, photoprint, microfilm or any other means without written permission from the author.
			\vfil\null
	}
	
	% Start the footnote counter
	\setcounter{footnote}{0}
}


